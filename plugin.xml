<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-admob-mopub" version="0.1.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>cordova-plugin-admob-mopub</name>
    <description>Cordova AdMob Mediation Plugin for MoPub</description>

    <engines>
        <engine name="cordova" version=">=8.0.0" />
    </engines>

    <platform name="android">
        <framework src="com.google.ads.mediation:mopub:5.+" />
    </platform>

    <platform name="ios">
        <podspec>
            <config>
                <source url="https://cdn.cocoapods.org/"/>
            </config>
            <pods use-frameworks="true">
                <pod name="GoogleMobileAdsMediationMoPub" spec="~> 5.14" />
            </pods>
        </podspec>
    </platform>
</plugin>
